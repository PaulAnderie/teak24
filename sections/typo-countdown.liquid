<div class="clearfix"></div>

{% if section.blocks.size > 0 %}
{% for block in section.blocks %}
{% if block.settings.block_home_image != blank %}
<div class="typo-countdowns"  style=" background-image:url({{ block.settings.block_home_image | img_url: '2048x'}});margin:{{ section.settings.block_home }};height:{{section.settings.block_home_height_7}}">

  {% else %}
  <div class="typo-countdowns"  style="margin:{{section.settings.block_home }};height:{{section.settings.block_home_height}}">
  
    
    <div class="background-position">

      {{ 'lifestyle-1' | placeholder_svg_tag: 'placeholder-svg' }}
    </div>
    {% endif %}
    <div class="container">

      <div class="col-md-offset-6 col-sm-offset-4 col-md-6 col-sm-8 col-xs-12">
        {% if block.settings.home_block_title != blank %}
        <h2>{{ block.settings.home_block_title }}</h2>
        {% endif %}
        {% if block.settings.home_block_sub_title != blank %}
        <p>{{ block.settings.home_block_sub_title }}</p>
        {% endif %}
        {% if block.settings.home_block_countdown != blank %}
       <div class="timline">

           <div id="cntdwn" class="typo-countdown"></div>
        <script>
          //<![CDATA[
          jQuery(document).ready(function($){
            $(".typo-countdown").lofCountDown({
              TargetDate:"{{ block.settings.home_block_countdown }}",

              DisplayFormat:"<div class='day'><span class='no'>%%D%%</span><span class='text'>days</span></div><div class='hours'><span class='no'>%%H%%</span><span class='text'>hours</span></div><div class='min'><span class='no'>%%M%%</span><span class='text'>min</span></div><div class='second'><span class='no'>%%S%%</span><span class='text'>sec</span></div>",
              FinishMessage: "Expired"
            });
          });
          //]]>
        </script>
          
           
          {{ 'countdown.js' | asset_url | script_tag }}
        </div>
        {% endif %}
        {% if block.settings.home_block_button_text != blank %}
        <div class="timeline-button"><a href="{{ block.settings.home_block_button_link }}">{{block.settings.home_block_button_text }}</a></div>
        {% endif %}
      </div>
    </div>
  </div>
  {% endfor %}
  {% endif %}  


{% schema %}
  {
    "name": "Typo - Countdown",
    "class": "index-section",
    "max_blocks": 1,
    "settings": [
		
      {
        "type": "checkbox",
        "id": "enable_block_home",
        "label": "Enable Home Deal Block?",
		"default": true
      },
      {
        "type": "text",
        "id": "block_home_height",
        "label": "Section Height",
        "default": "350px"
      },
  
      {
        "type": "text",
        "id": "block_home",
        "label": "Margin",
        "default": "0px 0px 0px 0px"
      }
	],
	"blocks": [
		{
           "type": "block",
           "name": "Block",
           "settings": [
              {
                "type": "image_picker",
                "id": "block_home_image",
                "label": "Image"
              },
              {
                "type": "text",
                "id": "home_block_title",
                "label": "Heading",
                "default": "Heading"
              },
              {
                "type": "text",
                "id": "home_block_sub_title",
                "label": "Subheading",
                "default": "Subheading"
              },
              {
                "type": "text",
                "id": "home_block_countdown",
                "label": "Countdown",
                "default": "2017\/12\/01 00:00:00"
              },
              {
                "type": "text",
                "id": "home_block_button_text",
                "label": "Button Label",
                "default": "Shop Now"
              },
              {
                "type": "text",
                "id": "home_block_button_link",
                "label": "Link",
                "default": "#"
              }
      		]
    	}
	],
    "presets": [
        {
          "name": "Typo - Countdown",
          "category": "Image",
          "blocks": [
            {
              "type": "block"
            }
          ]
        }
  	]
  }
{% endschema %}

