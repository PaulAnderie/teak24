{
  "name": "Contact",
  "settings": [
    {
      "type": "textarea",
      "id": "google_map_code",
      "label": "Google Map Code"
    },

    {
      "type": "header",
      "content": "Contact Content Text"
    },
    {
      "type": "text",
      "id": "contact_content_title",
      "label": "Title"
    },
    {
      "type": "textarea",
      "id": "contact_content_content",
      "label": "Content"
    },
    {
      "type": "header",
      "content": "Contact Form"
    },
    {
      "type": "text",
      "id": "contact_title",
      "label": "Title"
    }
  ]
}
{% endschema %}

