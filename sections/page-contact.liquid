<div class="contactus-page">
    {% comment %}
    Regular page content goes here.
    {% endcomment %}
    <div class="rte">
        {{ page.content }}
    </div>
    {% comment %}
    Contact form starts here
    {% endcomment %}
    page-contact...
    <div class="row">
        <div class="col-md-6 col-sm-6 col-xs-12">
            <div class="contact-title">
                {% if section.settings.contact_content_title != blank %}
                    <h3>{{section.settings.contact_content_title}}</h3>
                {% endif %}
            </div>
            {% if section.settings.contact_content_content != blank %}
                <div class="block-content">
                    {{ section.settings.contact_content_content }} 
                </div>
            {% endif %}
            {% if section.settings.google_map_code != blank %}
                <div class=" maps">
                    {% if section.settings.google_map_code != blank %}
                        {{ section.settings.google_map_code }}
                    {% endif %}
                </div>
            {% endif %}
        </div>
        <div class="col-md-6 col-sm-6 col-xs-12">
            {% form 'contact' %}
            {% comment %}
            Successful message
            {% endcomment %}
            {% if form.posted_successfully? %}
                <p class="note form-success">
                {{ 'contact.form.post_success' | t }}
                </p>
            {% endif %}
            {% include 'form-errors-custom' %}
            <div id="contactFormWrapper">
                <div class="contact-title">
                    <h3>{{ section.settings.contact_title }}</h3>
                </div>
                <div class=" form-contact">
                    <div class="row">
                        <div class="col-md-12 col-sm-12 col-xs-12">
                            <div class="row">
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <label for="ContactFormName">{{ 'contact.form.name' | t }}: *</label>
                                    <input type="text" required="required" id="ContactFormName" name="contact[name]" autocapitalize="words" >
                                </div>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <label for="ContactFormEmail">{{ 'contact.form.email' | t }}: *</label>
                                    <input type="email" required="required" name="contact[email]" id="ContactFormEmail" autocorrect="off" autocapitalize="off" >
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12 col-sm-12 col-xs-12">
                            <div class="row">
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <label for="ContactFormCompany">Firma:</label>
                                    <input type="text" id="ContactFormCompany" name="contact[company]" >
                                </div>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <label for="ContactFormPhone">{{ 'contact.form.phone' | t }}:</label>
                                    <input type="tel" id="ContactFormPhone" name="contact[phone]" pattern="[0-9\-]*" value="{% if form[phone] %}{{ form[phone] }}{% elsif customer %}{{ customer.phone }}{% endif %}">
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-xs-12">
                                    <label for="ContactFormMessage">{{ 'contact.form.message' | t }}: *</label>
                                    <textarea rows="7" required="required" name="contact[body]" id="ContactFormMessage" placeholder="{{ section.settings.contact_your_comment }}"></textarea>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-xs-1">
                                    <input type="checkbox" required="required" name="contact[confirmation]" id="ContactFormConfirmation" value="yes" />
                                </div>
                                <div class="col-xs-11">
                                    <label for="ContactFormConfirmation">* Hiermit erkl√§re ich mich einverstanden, dass meine in das Kontaktformular eingegebenen Daten elektronisch gespeichert und zum Zweck der Kontaktaufnahme verarbeitet und genutzt werden. Mir ist bekannt, dass ich meine Einwilligung jederzeit widerrufen kann.</label>
                                    <input type="submit" class="btn left" value="Send">
                                </div>
                            </div>
                            <p><strong>Hinweis:</strong> Felder, die mit * markiert sind, sind Pflichtfelder.</p>
                        </div>
                    </div>
                    {% endform %}
                </div>    

            </div>
        </div>
        <script>

        </script>
