<div class="about-page">
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-sm-6 col-xs-12">
        <img class="b-lazy" src="{{ section.settings.bg_about_banner | img_url: '2048x' }}" width="100%" height="100%">
      </div>
      <div class="col-md-6 col-sm-6 col-xs-12">
        <div class="product-tabs ">
          <div class="product-tabs-title">
            <ul class="nav nav-tabs" id="myTab">
              {% if section.settings.title_about_text_1 != blank %}
              <li class="active"><a data-toggle="tab" href="#collapse-tab1">{{ section.settings.title_about_text_1 }}</a></li>
              {% endif %}
              {% if section.settings.title_about_text_2 != blank %}
              <li class=""><a data-toggle="tab" href="#collapse-tab2">{{ section.settings.title_about_text_2 }}</a></li>
              {% endif %}
              {% if section.settings.title_about_text_3 != blank %}
              <li class=""><a data-toggle="tab" href="#collapse-tab3">{{ section.settings.title_about_text_3 }}</a></li>
              {% endif %}
            </ul>
          </div>
          <div id="myTabContent" class="tab-content">
            {% if section.settings.content_tabs_1 != blank %}
            <div id="collapse-tab1" class="tab-pane fade in active">
              {{ section.settings.content_tabs_1 }}
            </div>
            {% endif %}
            {% if section.settings.content_tabs_2 != blank %}
            <div id="collapse-tab2" class="tab-pane fade">
              {{ section.settings.content_tabs_2 }}
            </div>
            {% endif %}
            {% if section.settings.content_tabs_3 != blank %}
            <div id="collapse-tab3" class="tab-pane fade">
              {{ section.settings.content_tabs_3 }}
            </div>
            {% endif %}
          </div>
        </div>
        <script>
          jQuery('#myTab a').click(function (e) {
            e.preventDefault();
            jQuery(this).tab('show');
          })
        </script>
      </div>
    </div>
  </div>
</div>

<script>
  jQuery('.main-content > .container').removeClass('container');
</script>
<div class="clearfix"></div>
<style>
  .about-page {padding-top:50px;}
   .about-page .product-tabs .product-tabs-title:after {position: absolute;bottom: 1px;background: #eee;width: 100%;height: 1px;left: 0;content: "";z-index: 22;}
  .about-page .tab-pane p{line-height:25px;color:#888888;}
  .about-page .tab-pane .view-more a{background:#222;color:#fff;padding: 8px 35px;text-transform: uppercase;}
  .about-page .tab-pane .view-more a:hover{background:#666;color:#fff;}
  .about-page .tab-pane .view-more{display: inline-block;width: 100%;clear: both;padding-top: 10px;}
</style>
