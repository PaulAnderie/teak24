<div class="clearfix"></div>
<div class="grid-image-banner" style="margin:{{section.settings.margin_grid_image_banner}}">
  {% if section.settings.enable_grid_image_banner_fullwidth %} 
  <div class="full-width">
    {% else %}
    <div class="container">
      {% endif %}
      <div class="row">
        <div class="col-xs-12 col-sm-4 col-md-4">
          <div class="home-collection-wrapper">
            <div class="home-collection-content" style="color:{{section.settings.color_title_1}};">
              {% if section.settings.grid_image_banner_title_1 != blank %}
              {{ section.settings.grid_image_banner_title_1 }}
              {% endif %}
            </div>
            <div class="image">
              {% if section.settings.grid_image_banner_image_1 != blank %}
              <img class="b-lazy" src="{{ section.settings.grid_image_banner_image_1 | img_url: '2048x'  }}" alt="">
              {% else %}
              {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
              {% endif %}
            </div>
          </div>
        </div>
        <div class="col-xs-12 col-sm-4 col-md-4">
          <div class="home-collection-wrapper">
            <div class="home-collection-content" style="color:{{section.settings.color_title_2}};">
              {% if section.settings.grid_image_banner_title_2 != blank %}
              {{ section.settings.grid_image_banner_title_2 }}
              {% endif %}
            </div>
            <div class="image">
              {% if section.settings.grid_image_banner_image_2 != blank %}
              <img class="b-lazy" src="{{ section.settings.grid_image_banner_image_2 | img_url: '2048x'  }}" alt="">
              {% else %}
              {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
              {% endif %}
            </div>
          </div>
        </div>
        <div class="col-xs-12 col-sm-4 col-md-4">
          <div class="home-collection-wrapper">
            <div class="home-collection-content" style="color:{{section.settings.color_title_3}};">
              {% if section.settings.grid_image_banner_title_3 != blank %}
              {{ section.settings.grid_image_banner_title_3 }}
              {% endif %}
            </div>
            <div class="image">
              {% if section.settings.grid_image_banner_image_3 != blank %}
              <img class="b-lazy" src="{{ section.settings.grid_image_banner_image_3 | img_url: '2048x'  }}" alt="">
              {% else %}
              {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
              {% endif %}
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
{% schema %}
  {
	"name": "Typo - Grid Image",
    "class": "index-section",
    "settings": [
      {
        "type": "text",
        "id": "margin_grid_image_banner",
        "label": "Margin",
        "default": "0px 0px 0px 0px"
      },
      {
        "type": "checkbox",
        "id": "enable_grid_image_banner_fullwidth",
        "label": "Enable Block Full Width "
      },
      {
        "type": "color",
        "id": "color_title_1",
        "label": "Title Label Color 1",
        "default": "#ffffff",
        "info": "Default Value: #ffffff"
      },
      {
        "type": "textarea",
        "id": "grid_image_banner_title_1",
        "label": "Title 1",
        "default": "Title 1"
      },
      {
        "type": "image_picker",
        "id": "grid_image_banner_image_1",
        "label": "Images"
      },
      {
        "type": "color",
        "id": "color_title_2",
        "label": "Title Label Color 2",
        "default": "#ffffff",
        "info": "Default Value: #ffffff"
      },
      {
        "type": "textarea",
        "id": "grid_image_banner_title_2",
        "label": "Title 2",
        "default": "Title 2"
      },
      {
        "type": "image_picker",
        "id": "grid_image_banner_image_2",
        "label": "Images 2"
      },
      {
        "type": "color",
        "id": "color_title_3",
        "label": "Title Label Color 3",
        "default": "#ffffff",
        "info": "Default Value: #ffffff"
      },
      {
        "type": "textarea",
        "id": "grid_image_banner_title_3",
        "label": "Title 3",
        "default": "Title 3"
      },
      {
        "type": "image_picker",
        "id": "grid_image_banner_image_3",
        "label": "Images 3"
      }
	],
    "presets": [
        {
          "name": "Typo - Grid Image",
          "category": "Image"
        }
  	]
 }
{% endschema %}
