<div class="clearfix"></div>
<div class="typo-brand" style="margin: {{ section.settings.home_mg_brands }}">
<div class="container">
  {% if section.settings.brand_title != blank %}
  <div class="heading-block">
    <h3 class="title">{{ section.settings.brand_title }}</h3>
  </div>
  {% endif %}
  <div id="logo-brands" class="" style="text-align: center;">

    {% if section.blocks.size > 0 %}
    {% for block in section.blocks %}
		 {% if block.settings.brand_thumb1 != blank %}
        <div class="item-logo">   
          {% if block.settings.link != blank %}
            <a href="{{ block.settings.link }}" class="logo-link">
          {% endif %}
            {{ block.settings.brand_thumb1 | img_url: '160x160' | img_tag: section.settings.image.alt, 'logo-bar__image' }}
              {% if block.settings.link != blank %}
          </a>
          {% endif %}
        </div>  
        {% else %}
        <div class="item-logo">
            {{ 'logo' | placeholder_svg_tag: 'placeholder-svg' }}
        </div>
        {% endif %}
   
    
    {% endfor %}
    {% endif %}
  </div>
  <script>
    $(document).ready(function() {
      $("#logo-brands").owlCarousel({
        itemsCustom : [ 
          [0, 2],
          [450, 2],
          [600, 3],
          [700, 4],
          [1000, 5],
          [1200, 6],
          [1400, 6],
          [1600, 6]
        ],
        autoPlay : true,
        stopOnHover : false,

        lazyLoad : false,
        lazyFollow : true,
        lazyEffect : "fade",
        pagination : false,

        navigation : true,

      navigationText : ['<i class="fa fa-angle-left"></i>','<i class="fa fa-angle-right"></i>'],

      });
    })
  </script>
  
</div>
</div>
{% schema %}
  {
  
	"name": "Typo - Brand ",
    "class": "index-section",
    "max_blocks": 10,
    "settings": [
      {
        "type": "text",
        "id": "home_mg_brands",
        "label": "Margin",
        "default": "0px 0px 0px 0px"
      },
      {
        "type": "text",
        "id": "brand_title",
        "label": "Heading",
        "default": "Brand Logo"
      }
	],
    "blocks": [
        {
          "type": "logo_image",
          "name": "Logo",
          "settings": [
          {
            "type": "image_picker",
            "id": "brand_thumb1",
            "label": "Logo"
          },

        {
          "type": "text",
          "id": "link",
          "label": "Link",
          "default": "#"
        }
         ]
      }
	],
    "presets": [
        {
          "name": "Typo - Brand ",
          "category": "Image",
          "blocks": [
            {
              "type": "logo_image"
            },
            {
            	"type": "logo_image"
            },
            {
            	"type": "logo_image"
            },
            {
           		"type": "logo_image"
            }
          ]
        }
  	]
 }
{% endschema %}

